<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".auth.LoginActivity">


 <LinearLayout
    android:id="@+id/linearColumnsigninforfre"
    android:layout_gravity="top|center"
    android:layout_height="360dp"
     android:padding="10dp"
    android:layout_marginBottom="156px"
    android:layout_marginEnd="39px"
    android:layout_marginStart="39px"
    android:layout_marginTop="496px"
     android:background="@color/purple_100"
    android:layout_width="match_parent"
    android:orientation="vertical" style="@style/groupStyleblack_900_e5">

    <TextView
        android:id="@+id/txtSigninforfre"
        style="@style/txtInderregular20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="13px"
        android:layout_marginTop="152px"
        android:layout_marginEnd="13px"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="Sign in for free"
        android:textSize="20dp"
        tools:text="Sign in for free" />

    <EditText
        android:id="@+id/username_field_login"
        style="@style/etSolidRounded"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_marginStart="13px"
        android:layout_marginTop="42px"
        android:layout_marginEnd="13px"
        android:background="@drawable/rectangle_bg_light_blue_600_4c_radius_4"
        android:ellipsize="end"
        android:hint="username"
        android:inputType="text"
        android:paddingStart="11px"
        android:paddingTop="12px"
        android:paddingEnd="30px"
        android:paddingBottom="7px"
        android:singleLine="true"
        android:textSize="15dp"
        android:textColorHint="@color/bluegray_100_7f"
        tools:ignore="Autofill" />

    <EditText
        android:id="@+id/password_field_login"
        style="@style/etSolidRounded"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_marginStart="13px"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="13px"
        android:background="@drawable/rectangle_bg_light_blue_600_4c_radius_4"
        android:ellipsize="end"
        android:hint="password"
        android:inputType="textPassword"
        android:paddingStart="11px"
        android:paddingTop="12px"
        android:paddingEnd="30px"
        android:paddingBottom="7px"
        android:singleLine="true"
        android:textSize="15dp"
        android:textColorHint="@color/bluegray_100_7f"
        tools:ignore="Autofill" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/sign_in_button2"
        style="@style/btnSolidRounded"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="13px"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="12px"
        android:ellipsize="end"
        android:gravity="center"
        android:paddingStart="30px"
        android:paddingTop="20px"
        android:paddingEnd="30px"
        android:paddingBottom="10px"
        android:singleLine="true"
        android:text="Sign In"
        android:textSize="15dp"
        android:textAllCaps="false"
        tools:text="Sign in" />

    <TextView
        android:id="@+id/not_have_account"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAlignment="center"
        android:layout_marginTop="18dp"
        android:textSize="15dp"
        android:textColor="@color/white_500"
        android:text=" Don't have account? sign up here"
        />

  </LinearLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ui.account.AccountFragment">

    <LinearLayout android:gravity="start"
        android:id="@+id/linearColumnstreamavailabi"
        android:layout_height="match_parent"
        android:layout_marginEnd="16px"
        android:layout_marginStart="16px"
        android:layout_weight="1.0"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <TextView android:ellipsize="end"
            android:gravity="center_horizontal"
            android:id="@+id/txtStreamAvailabi"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12px"
            android:layout_marginStart="12px"
            android:layout_width="match_parent"
            android:layout_marginTop="23dp"
            android:singleLine="true"
            android:textSize="17dp"
            android:text="Stream Availability"
            style="@style/txtInderregular20"/>


        <TextView android:ellipsize="end" android:id="@+id/txtLabel"
            android:layout_height="wrap_content"
            android:layout_marginEnd="11.44dp"
            android:layout_marginStart="3.43dp"
            android:layout_marginTop="21.96dp"
            android:layout_width="wrap_content"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="1.14dp"
            android:textSize="15dp"
            android:singleLine="true"
            android:text="Username"
            style="@style/txtInterregular12" tools:text="username"/>

        <EditText
            android:background="@drawable/rectangle_border_white_a700_radius_5"
            android:drawablePadding="11.44dp"
            android:ellipsize="end"
            android:hint=""
            android:id="@+id/etInput" android:inputType="text"
            android:layout_height="48dp"
            android:layout_marginEnd="3px"
            android:layout_marginStart="3px"
            android:layout_marginTop="9px"
            android:layout_width="match_parent"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="1px"
            android:textSize="12dp"
            android:paddingBottom="11px"
            android:paddingEnd="30px"
            android:paddingStart="10px"
            android:paddingTop="12px"
            android:singleLine="true"
            android:textColorHint="@color/white"
            style="@style/etRoundedOutline" tools:ignore="Autofill"/>
        <TextView android:ellipsize="end" android:id="@+id/txtEmail"
            android:layout_height="wrap_content"
            android:layout_marginEnd="11.44dp"
            android:layout_marginStart="3.43dp"
            android:layout_marginTop="21.96dp"
            android:layout_width="wrap_content"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="1.14dp"
            android:textSize="15dp"
            android:singleLine="true"
            android:text="Email"
            style="@style/txtInterregular12" tools:text="Email"/>
        <EditText
            android:background="@drawable/rectangle_border_white_a700_radius_5"
            android:drawablePadding="11.44dp"
            android:ellipsize="end"
            android:hint=""
            android:id="@+id/emailInput" android:inputType="text"
            android:layout_height="48dp"
            android:layout_marginEnd="3px"
            android:layout_marginStart="3px"
            android:layout_marginTop="9px"
            android:layout_width="match_parent"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="1px"
            android:textSize="12dp"
            android:paddingBottom="11px"
            android:paddingEnd="30px"
            android:paddingStart="10px"
            android:paddingTop="12px"
            android:singleLine="true"
            android:textColorHint="@color/white"
            style="@style/etRoundedOutline" tools:ignore="Autofill"/>
        <TextView android:ellipsize="end"
            android:id="@+id/txtPassword"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10px"
            android:layout_marginStart="3px"
            android:layout_marginTop="23dp"
            android:layout_width="wrap_content"
            android:letterSpacing="0.03"
            android:textSize="15dp"
            android:lineSpacingExtra="1px"
            android:singleLine="true"
            android:text="Password"
            style="@style/txtInterregular12" tools:text="Password"/>
        <EditText
            android:background="@drawable/rectangle_border_white_a700_radius_5"
            android:drawablePadding="30px"
            android:ellipsize="end" android:hint=""
            android:id="@+id/etPasswordOne"
            android:inputType="textPassword"
            android:layout_height="48dp"
            android:layout_marginEnd="3px"
            android:layout_marginStart="3px"
            android:layout_marginTop="9px"
            android:layout_width="match_parent"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="1px"
            android:paddingBottom="14px"
            android:paddingEnd="10px"
            android:paddingStart="10px"
            android:paddingTop="9px"
            android:singleLine="true"
            android:textSize="12dp"
            android:text="password"
            android:textColorHint="@color/white"
            style="@style/etRoundedOutline" tools:ignore="Autofill"/>
        <TextView android:ellipsize="end"
            android:id="@+id/txtAtleastoneUp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="11.44dp"
            android:layout_marginStart="3.43dp"
            android:layout_marginTop="6.41dp"
            android:layout_width="match_parent"
            android:singleLine="true"
            android:text="AtleastoneUp"
            android:textSize="13dp"
            style="@style/txtInterregular10" tools:text="At least one Uppercase, one number, one symbol"/>
        <TextView android:ellipsize="end"
            android:id="@+id/txtLabelOne"
            android:layout_height="wrap_content"
            android:layout_marginEnd="11.44dp"
            android:layout_marginTop="23.79dp"
            android:layout_width="wrap_content"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="1.14dp"
            android:singleLine="true"
            android:textSize="15dp"
            android:text="Country"
            style="@style/txtInterregular12" tools:text="Country"/>


        <Spinner
            android:id="@+id/country"
            android:layout_width="100dp"
            android:layout_height="49dp"
            android:scrollbars="vertical"
            android:contentDescription="country filter"
            android:contextClickable="true"
            android:background="@color/purple_100"
            />

        <TextView android:ellipsize="end"
            android:id="@+id/txtLabelLanguage"
            android:layout_height="wrap_content"
            android:layout_marginEnd="11.44dp"
            android:layout_marginTop="23.79dp"
            android:layout_width="wrap_content"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="1.14dp"
            android:singleLine="true"
            android:textSize="15dp"
            android:text="Language"
            style="@style/txtInterregular12" tools:text="Language"/>

        <Spinner
            android:id="@+id/language"
            android:layout_width="100dp"
            android:layout_height="49dp"
            android:scrollbars="vertical"
            android:contentDescription="language filter"
            android:contextClickable="true"
            android:background="@color/purple_100"
            />



        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSave"
            style="@style/btnSolidRounded_1"
            android:layout_width="128dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="12px"
            android:layout_marginTop="34px"
            android:layout_marginEnd="12px"
            android:layout_marginBottom="10dp"
            android:ellipsize="end"
            android:gravity="center"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="1px"
            android:paddingStart="30px"
            android:paddingTop="10px"
            android:paddingEnd="30px"
            android:paddingBottom="10px"
            android:singleLine="true"
            android:textSize="13dp"
            android:text="SAVE"
            android:textAllCaps="false"
            tools:text="SAVE" />



        <androidx.appcompat.widget.AppCompatButton android:ellipsize="end"
            android:id="@+id/btnDeleteaccount"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12px"
            android:layout_marginStart="12px"
            android:layout_marginTop="16px"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:textSize="15dp"
            android:text="Delete account"
            style="@style/txtInderregular15_3" tools:text="Delete account"/>
        <androidx.appcompat.widget.AppCompatButton android:ellipsize="end"
            android:id="@+id/btnLogout"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12px"
            android:layout_marginStart="12px"
            android:layout_marginTop="21px"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:textSize="15dp"
            android:text="Logout"
            style="@style/txtInderregular15_3" tools:text="Logout"/>




    </LinearLayout>


</LinearLayout>
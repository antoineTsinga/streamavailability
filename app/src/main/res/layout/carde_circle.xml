<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_circle"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="4dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:elevation="12dp"
        android:id="@+id/view2"
        app:cardCornerRadius="25dp"
        android:background="@color/black_500"
        android:layout_centerHorizontal="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/card_circle_title"
        app:layout_constraintStart_toStartOf="parent"
        >
        <ImageView
            android:id="@+id/card_circle_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/default_image_background"
            android:contentDescription="avatar image"
            android:scaleType="centerCrop"
           />

    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/card_circle_title"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="name"
        android:textAlignment="center"
        android:textColor="@color/white_500"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>